#PBS -S /bin/bash
#PBS -lwalltime=40:00:00 -lnodes=1:cores16

mkdir "$TMPDIR"/PredNet
mkdir "$TMPDIR"/PredNet/ridge
mkdir "$TMPDIR"/PredNet/ridge/ridge
mkdir "$TMPDIR"/PredNet/vim2
mkdir "$TMPDIR"/PredNet/vim2/vim-2

cp $HOME/PredNet/ridge/ridge/* "$TMPDIR"/PredNet/ridge/ridge/

cp $HOME/PredNet/vim2/vim-2/*.mat "$TMPDIR"/PredNet/vim2/vim-2/

cd "$TMPDIR"/PredNet/ridge/ridge
module load python
KERAS_BACKEND=theano python ridgepixels.py		

cp  "$TMPDIR"/PredNet/ridge/ridge/* $HOME/PredNet/ridge/ridge


